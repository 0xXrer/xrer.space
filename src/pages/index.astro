---
import "@/styles/global.css";
import portfolioConfig from "@/config/portfolio";
import SEO from "@/components/SEO.astro";

// Containers
import About from "@/components/containers/about.astro";
import Projects from "@/components/containers/projects.astro";
import GitHubRepos from "@/components/containers/github-repos.astro";
import Soon from "@/components/containers/soon.astro";

const { personal, seo } = portfolioConfig;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="generator" content={Astro.generator} />
        <title>{personal.name} Portfolio</title>

        <!-- SEO and Social Media Meta Tags -->
        <SEO seo={seo} />
    </head>

    <body>
        <main
            class="mx-3 grow md:mx-8 lg:mx-12 grid-border-color border-r border-l"
        >
            <About />

            <Projects />

            <GitHubRepos />

            <Soon />
        </main>
    </body>
</html>
