---
import Container from "@/components/container.astro";
import Grid from "@/components/patters/grid.astro";
import Card, { CardContent } from "@/components/card";

import { LucideBox, Key } from "lucide-react";
---

<Container showTopLine={false}>
    <Grid
        patternSize={20}
        enableGradient={true}
        gradientDirection={"to-bottom"}
        class="absolute inset-0 w-full h-full opacity-20 pointer-events-none"
    />
    <section class="p-6">
        <!-- Zed Just Works project card added as requested -->

        <!-- Zed Just Works Project Card -->
        <div class="bg-background w-full p-6">
            <div class="flex flex-col items-center text-center space-y-4">
                <!-- Project Icon -->
                <div
                    class="flex-shrink-0 p-0.5 bg-background border border-2 rounded-lg"
                >
                    <a href="https://github.com/0xXrer" target="_blank">
                        <img
                            src="/github.png"
                            alt="Xrer Profile Picture"
                            class="pointer-events-none select-none w-18 h-18 rounded-lg object-cover outline outline-dashed outline-2 outline-offset-[-1px] outline-border"
                        />
                    </a>
                </div>

                <!-- Project Badge -->
                <span
                    class="text-xs text-muted-foreground uppercase tracking-wider font-medium"
                >
                    MY WORKS
                </span>

                <!-- Project Description -->
                <p class="text-muted-foreground leading-relaxed">
                    All projects are protected by a license agreement, you can
                    learn more about the project by clicking on it.
                </p>

                <!-- Action Button -->
                <!-- <Button variant="outline" className="mt-4">
                    <a href="#" class="flex items-center gap-2">
                        View all releases
                        <ExternalLink className="h-4 w-4" />
                    </a>
                </Button> -->

                <div class="w-full grid-cols-1 gap-8 md:grid md:grid-cols-6">
                    <section
                        class="col-span-full w-full transition-opacity duration-100 ease-out default-border-color border-b border-dashed pb-6 will-change-opacity"
                    >
                        <Card
                            className="relative flex size-full flex-col gap-4"
                        >
                            <section
                                class="relative flex size-full flex-col gap-4"
                            >
                                <div
                                    class="absolute -top-[23px] left-2 rounded-t-sm px-1.5 py-1 border-offgray-200 border border-b-0 to-offgray-100/30 bg-linear-180 from-blue-50/30 subheader !text-[0.5625rem] text-black"
                                >
                                    Latest Project
                                </div>
                                <div
                                    class="group relative p-2 overflow-hidden rounded-md border transition-all duration-300 ease-in-out hover:border-blue-300 select-none"
                                >
                                    <!-- Diagonal Lines Pattern -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="absolute inset-0 w-full h-full pointer-events-none stroke-border transition-all duration-300 ease-in-out group-hover:stroke-blue-300"
                                    >
                                        <defs>
                                            <pattern
                                                id="diagonalPattern"
                                                patternUnits="userSpaceOnUse"
                                                width="10"
                                                height="10"
                                                patternTransform="rotate(45)"
                                            >
                                                <line
                                                    x1="0"
                                                    y1="0"
                                                    x2="0"
                                                    y2="10"
                                                    stroke-width="1"></line>
                                            </pattern>
                                        </defs>
                                        <rect
                                            width="100%"
                                            height="100%"
                                            fill="url(#diagonalPattern)"></rect>
                                    </svg>

                                    <!-- Video Container -->
                                    <div
                                        class="video-container relative"
                                        data-link="https://uilibs.xrer.space"
                                    >
                                        <video
                                            class="video-element w-full h-auto object-cover rounded-sm relative z-2 pointer-events-none select-none"
                                            muted
                                            loop
                                            playsinline
                                            preload="metadata"
                                        >
                                            <source
                                                src="/videos/projects-preview/uilibs.mp4"
                                                type="video/mp4"
                                            />
                                        </video>
                                    </div>

                                    <!-- Bottom Panel -->
                                    <div
                                        class="absolute bg-background right-0 bottom-0 left-0 z-4 flex items-center bg-cream-50 border-t border-blue-300 divide-x divide-blue-300 dark:divide-blue-400/50 text-accent-blue text-xs [box-shadow:hsl(218,_13%,_50%,_0.1)_0_-2px_0_0_inset] transform transition-transform duration-200 group-hover:translate-y-0 md:translate-y-full"
                                    >
                                        <a
                                            class="dark:bg-offgray-950 w-full px-3 py-2 text-center hover:bg-blue-50 dark:hover:bg-blue-950"
                                            href="https://uilibs.xrer.space"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            Learn More →
                                        </a>
                                    </div>
                                </div>
                                <CardContent>
                                    <h3
                                        class="flex flex-row gap-2 items-center"
                                    >
                                        <LucideBox className="h-4 w-4" /> UI Libraries
                                        Storage
                                    </h3>
                                    <div class="text-muted-foreground text-sm">
                                        <p>
                                            UILibs is a simple and handy website
                                            that helps you discover and explore
                                            cool UI libraries for your Roblox
                                            projects. Whether you&#39;re a
                                            beginner or experienced developer,
                                            you can easily browse and find the
                                            perfect UI tools to enhance your
                                            game.
                                        </p>
                                        <p>
                                            Check it out at:
                                            <a
                                                href="https://uilibs.xrer.space"
                                                class="text-blue-600 hover:underline"
                                            >
                                                uilibs.xrer.space
                                            </a>
                                        </p>
                                    </div>
                                </CardContent>
                            </section>
                        </Card>
                    </section>

                    <section class="col-span-full h-full md:col-span-3">
                        <Card
                            className="relative flex size-full flex-col gap-4"
                        >
                            <section
                                class="relative flex size-full flex-col gap-4"
                            >
                                <div
                                    class="group relative p-2 overflow-hidden rounded-md border transition-all duration-300 ease-in-out hover:border-blue-300 select-none"
                                >
                                    <!-- Diagonal Lines Pattern -->
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="absolute inset-0 w-full h-full pointer-events-none stroke-border transition-all duration-300 ease-in-out group-hover:stroke-blue-300"
                                    >
                                        <defs>
                                            <pattern
                                                id="diagonalPattern"
                                                patternUnits="userSpaceOnUse"
                                                width="10"
                                                height="10"
                                                patternTransform="rotate(45)"
                                            >
                                                <line
                                                    x1="0"
                                                    y1="0"
                                                    x2="0"
                                                    y2="10"
                                                    stroke-width="1"></line>
                                            </pattern>
                                        </defs>
                                        <rect
                                            width="100%"
                                            height="100%"
                                            fill="url(#diagonalPattern)"></rect>
                                    </svg>

                                    <!-- Video Container -->
                                    <div
                                        class="video-container relative"
                                        data-link="https://authguard.org/"
                                    >
                                        <video
                                            class="video-element w-full h-auto object-cover rounded-sm relative z-2 pointer-events-none select-none"
                                            muted
                                            loop
                                            playsinline
                                            preload="metadata"
                                        >
                                            <source
                                                src="/videos/projects-preview/authg.mp4"
                                                type="video/mp4"
                                            />
                                        </video>
                                    </div>

                                    <!-- Bottom Panel -->
                                    <div
                                        class="absolute bg-background right-0 bottom-0 left-0 z-4 flex items-center bg-cream-50 border-t border-blue-300 divide-x divide-blue-300 dark:divide-blue-400/50 text-accent-blue text-xs [box-shadow:hsl(218,_13%,_50%,_0.1)_0_-2px_0_0_inset] transform transition-transform duration-200 group-hover:translate-y-0 md:translate-y-full"
                                    >
                                        <a
                                            class="dark:bg-offgray-950 w-full px-3 py-2 text-center hover:bg-blue-50 dark:hover:bg-blue-950"
                                            href="https://authguard.org/"
                                            target="_blank"
                                            rel="noopener noreferrer"
                                        >
                                            Learn More →
                                        </a>
                                    </div>
                                </div>
                                <CardContent>
                                    <h3
                                        class="flex flex-row gap-2 items-center"
                                    >
                                        <Key className="h-4 w-4" /> KeyGuardian (AuthGuard)
                                    </h3>
                                    <div class="text-muted-foreground text-sm">
                                        <p>
                                            Keyguardian is a free whitelist service; I used to be a frontend developer there.
                                        </p>
                                        <p>
                                            Check it out at:
                                            <a
                                                href="https://authguard.org/"
                                                class="text-blue-600 hover:underline"
                                            >
                                                authguard.org
                                            </a>
                                        </p>
                                    </div>
                                </CardContent>
                            </section>
                        </Card>
                    </section>
                </div>
            </div>
        </div>
    </section>
</Container>

<!-- JavaScript for video hover functionality -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const videoContainers = document.querySelectorAll(".video-container");

        videoContainers.forEach((container) => {
            const video = container.querySelector(
                ".video-element",
            ) as HTMLVideoElement;

            if (!video) return;

            // Mouse enter - play video
            container.addEventListener("mouseenter", () => {
                video.currentTime = 0;
                video.play().catch((error) => {
                    console.error("Error playing video:", error);
                });
            });

            // Mouse leave - pause video
            container.addEventListener("mouseleave", () => {
                video.pause();
                video.currentTime = 0;
            });
        });
    });
</script>
